{
    "compilerOptions": {
      "target": "ES2022", // Or a similar modern target
      "module": "NodeNext",
      "moduleResolution": "NodeNext", // Or "Node16"
      "esModuleInterop": true,
      "outDir": "./dist", // Optional: Specify an output directory within 'api'
      "strict": true,
      "noImplicitAny": false,
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "include": ["./**/*.ts"], // Include all TypeScript files in the 'api' directory
    "exclude": ["./node_modules", "./dist"] // Exclude node_modules and any output directory
  }